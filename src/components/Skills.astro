---
import AstroIcon from './icons/dev/AstroIcon.astro';
import DockerIcon from './icons/dev/DockerIcon.astro';
import FigmaIcon from './icons/dev/FigmaIcon.astro';
import GitIcon from './icons/dev/GitIcon.astro';
import Net from './icons/dev/CSharp.astro';
import PythonIcon from './icons/dev/PythonIcon.astro';
import NumpyIcon from './icons/dev/NumpyIcon.astro';
import MongoIcon from './icons/dev/MongoIcon.astro';
import PostgreSQL from './icons/dev/PostgreSQL.astro';
import TsIcon from './icons/dev/TsIcon.astro';
import GitHub from './icons/GitHub.astro';
import SkillsIcon from './icons/SkillsIcon.astro';
import SectionTitle from './section-title/SectionTitle.astro';
---

<section class="skills wrapper" id="skills">
  <SectionTitle title="Stack tecnológico">
    <SkillsIcon class="section-icon" />
  </SectionTitle>

  <div class="skills__content">
    <h3 class="skills__subtitle smoke">Tecnologías</h3>
    <ul class="skills__ul">
      <li class="skills__li">
        <PythonIcon class="skills__icon" />
        Python
      </li>
      <li class="skills__li">
        <TsIcon class="skills__icon" />
        TypeScript
      </li>
      <li class="skills__li">
        <AstroIcon class="skills__icon" />
        Astro
      </li>
      <li class="skills__li">
        <PostgreSQL class="skills__icon" />
        PostgreSQL
      </li>
      <li class="skills__li">
        <MongoIcon class="skills__icon" />
        MongoDB
      </li>
      <li class="skills__li">
        <Net class="skills__icon" />
        C# .Net
      </li>
      <li class="skills__li">
        <NumpyIcon class="skills__icon" />
        Numpy
      </li>
    </ul>

    <h3 class="skills__subtitle smoke">Herramientas</h3>
    <ul class="skills__ul">
      <li class="skills__li">
        <GitIcon class="skills__icon" />
        Git
      </li>
      <li class="skills__li">
        <GitHub class="skills__icon" />
        GitHub
      </li>
      <li class="skills__li">
        <DockerIcon class="skills__icon" />
        Docker
      </li>
      <li class="skills__li">
        <FigmaIcon class="skills__icon" />
        Figma
      </li>
    </ul>
  </div>
</section>

<style>
  .skills {
    padding: 1em;
    margin-bottom: 3rem;

    display: flex;
    flex-direction: column;
    row-gap: 1em;
  }
  .skills__title {
    font-size: clamp(1.7rem, 5vw, 2.5rem);
    font-weight: 700;

    display: flex;
    align-items: center;
    gap: 0.5em;
  }
  .skills__content {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1.5em;
  }
  .skills__subtitle {
    font-size: 1.2em;
    font-weight: 600;
    border-bottom: 1px dashed rgba(var(--color), 1);
    width: fit-content;
  }
  .skills__ul {
    display: flex;
    flex-wrap: wrap;

    gap: 1.5rem;
  }
  .skills__li {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.4em;
  }

  .skills__icon {
    width: 2.5rem;
    color: rgba(var(--color), 1);
  }
</style>
