---
import { ClientRouter } from 'astro:transitions';

import Header from '@components/header/Header.astro';
import 'cal-sans';
import '../styles/reset.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/code.svg" />

    <!-- Open Graph Meta Tags -->
    <meta property="description" content="Jose luis Back End Developer - TypeScript - Python - Astro" />
    <meta property="og:title" content="Jose luis Back End Developer" />
    <meta property="og:description" content="Jose luis - TypeScript - Python - Astro" />
    <meta property="og:url" content="https://krba.vercel.app/" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://krba.vercel.app/krba-jose.webp" />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Jose luis Back End Developer" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@Krba" />
    <meta name="twitter:creator" content="@Krba" />
    <meta name="twitter:title" content="Jose luis Back End Developer" />
    <meta name="twitter:description" content="Jose luis Back End Developer - TypeScript - Python - Astro" />

    <meta property="og:url" content="https://krba.vercel.app/" />
    <link rel="canonical" href="https://krba.vercel.app" />

    <script is:inline>
      const getTheme = () => {
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme) {
          return savedTheme;
        }
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'light' : 'dark';
      };
      const theme = getTheme();
      document.documentElement.classList.toggle('dark', theme === 'dark');
    </script>
    <script>
      const applyTheme = () => {
        const theme = localStorage.getItem('theme');
        if (theme) {
          document.documentElement.classList.toggle('dark', theme === 'dark');
        }
      };
      document.addEventListener('DOMContentLoaded', applyTheme);
      document.addEventListener('astro:page-load', applyTheme);
      document.addEventListener('astro:after-swap', applyTheme);
    </script>

    <ClientRouter />
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
<style is:global>
  .wrapper {
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }
  .smoke {
    color: rgba(var(--color-text-muted), 1);
  }

  .section-icon {
    width: 1em;
    color: rgba(var(--color), 1);
  }

  .building {
    color: rgb(var(--color), 1);
    font-size: 0.75rem;
    text-transform: uppercase;
    font-weight: 600;
  }
</style>
